
.header {
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 40rpx;
  color: #333
}

.header-content {
  display: flex;
  justify-content: space-between;
}

.header-left {
  flex: 1;
  margin-right: 10rpx; 
  margin-top: 10rpx;
}

.header-rating {
  display: flex;
  align-items: center;
}

.header-rating .remark {
  font-size: 30rpx;
  color: #999;
  margin-left: 20rpx;
}

.header-deatail {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #666;
}

.header-deatail view {
  margin-bottom: 10rpx;
}

.header-right {
  width: 200rpx;
  height: 300rpx;
}

.header-right image {
  width: 100%;
  height: 100%;
}

.item-tag {
  padding: 10rpx 20rpx;
}

.item-tag .tag-title {
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}

.item-tag .tag-detail {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item-tag .tag-detail text {
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: #353535;
  background: #f5f5f5;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.reamark-group {
  padding: 30rpx;
}

.reamark-group .remark-title {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.seeMore {
  color: #41be57;
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}




