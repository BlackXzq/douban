.header {
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.header image {
  width: 40rpx;
  height: 60rpx;
}

.header .header-title {
  font-size: 32rpx;
  color: #41be57;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.header .header-rate {
  font-size: 32rpx;
  color: #999;
}

.comment-group {
  padding: 30rpx;
}

.comment-group-title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.bottom-group {
  display: flex;
  padding: 30rpx;
}

.bottom-group button {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #666;
}

